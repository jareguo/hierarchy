{
  "name": "hierarchy",
  "version": "0.1.0",
  "description": "scene hierarchy viewer",
  "author": "Firebox Technology",
  "hosts": {
    "editor-framework": "^0.3.14"
  },
  "main": "main.js",
  "menus": {
    "Panel/Hierarchy": {
      "icon": "panel/icon.png",
      "accelerator": "CmdOrCtrl+4",
      "message": "hierarchy:open"
    }
  },
  "panels": {
    "panel": {
      "frame": "panel/hierarchy.html",
      "type": "dockable",
      "title": "Hierarchy",
      "icon": "panel/icon.png",
      "width": 200,
      "shortcuts": {
        "command+f": "focusOnSearch",
        "#tree": {
          "up": "selectPrev",
          "down": "selectNext",
          "shift+up": "shiftSelectPrev",
          "shift+down": "shiftSelectNext",
          "left": "foldCurrent",
          "right": "foldupCurrent",
          "enter": "renameCurrentSelected",
          "f2": "renameCurrentSelected",
          "command+backspace": "deleteCurrentSelected",
          "del": "deleteCurrentSelected",
          "command+d": "duplicateCurrentSelected",
          "ctrl+d": "duplicateCurrentSelected"
        }
      },
      "messages": [
        "selection:selected",
        "selection:unselected",
        "selection:activated",
        "selection:deactivated",
        "selection:hoverin",
        "selection:hoverout",
        "scene:ready",
        "scene:reloading",
        "scene:reply-query-hierarchy",
        "hierarchy:hint",
        "hierarchy:rename",
        "hierarchy:delete",
        "hierarchy:duplicate",
        "hierarchy:show-path"
      ],
      "profiles": {
        "local": {
          "item-states": []
        }
      }
    }
  },
  "tests": [
    "test/tree-diff.js",
    "test/apply-diff.html"
  ]
}
